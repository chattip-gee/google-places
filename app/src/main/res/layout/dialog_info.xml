<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        style="@style/AppTheme.Dialog.Info"
        android:gravity="center"
        android:orientation="vertical">

        <com.fireoneone.android.placesapp.bases.widgets.BaseImageView
            android:id="@+id/imageview_info"
            style="@style/AppTheme.ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:visibility="gone" />

        <com.fireoneone.android.placesapp.bases.widgets.BaseTextView
            android:id="@+id/textview_title"
            style="@style/AppTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/standard_dialog_title"
            android:textSize="20sp"
            android:textStyle="bold"
            custom:customFontName="@string/regular_font" />

        <com.fireoneone.android.placesapp.bases.widgets.BaseTextView
            android:id="@+id/textview_description"
            style="@style/AppTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/standard_dialog_description"
            android:textSize="15sp" />

        <com.fireoneone.android.placesapp.bases.widgets.BaseButton
            android:id="@+id/button_close"
            style="@style/AppTheme.Button.Info"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_button_standard"
            android:text="@string/global_close"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000" />
    </LinearLayout>
</layout>